{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",

    "allowJs": false,

    "outDir": "./dist",
    "rootDir": "./src",

    "removeComments": true,
    "strict": false,

    "typeRoots": ["./node_modules/@types", "./@types"],
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"]
}
